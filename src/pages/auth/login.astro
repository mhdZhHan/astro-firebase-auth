---
import AuthForm from "../../components/forms/AuthForm.astro"
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Login">
	<section
		class="flex flex-col justify-center items-center min-h-screen px-4"
	>
		<div class="bg-gray-800 p-10 rounded-lg shadow-lg w-full max-w-md">
			<h2 class="text-3xl font-extrabold mb-6 text-center">
				Login to your account
			</h2>

			<AuthForm type="login" />
		</div>
	</section>
</Layout>
